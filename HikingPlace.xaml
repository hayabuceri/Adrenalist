<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdrenalistApp.HikingPlace"
             BackgroundImageSource="black.png"
             Title="Hiking Place">
    <ScrollView>
        <VerticalStackLayout
    Padding="80,100"
    Spacing="25">
            <Grid ColumnDefinitions="*,*,*" RowDefinitions="*,*,*" HeightRequest="300" WidthRequest="300">
                <Image Source="kinabalu.png" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Grid.RowSpan="1" WidthRequest="250" HeightRequest="250" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Button
        Grid.Column="0"
        Grid.Row="0"
        Grid.ColumnSpan="3"
        HeightRequest="250"
        WidthRequest="240"
        BackgroundColor="Transparent"
        Text="Gunung Kinabalu"
        TextColor="White"
        FontAttributes="Bold"
        FontSize="20"
        Style="{StaticResource ButtonStyle}"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        Clicked="PlaceKinabalu"/>
                <BoxView Grid.Column="2" Grid.Row="0" Grid.RowSpan="3" BackgroundColor="Transparent" HeightRequest="300" WidthRequest="50" HorizontalOptions="Center" VerticalOptions="Center" />
            </Grid>
            <Grid ColumnDefinitions="*,*,*" RowDefinitions="*,*,*" HeightRequest="300" WidthRequest="300">
                <Image Source="stong.png" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Grid.RowSpan="1" WidthRequest="250" HeightRequest="250" HorizontalOptions="Center" VerticalOptions="Center"  />
                <Button
        Grid.Column="0"
        Grid.Row="0"
        Grid.ColumnSpan="3"
        HeightRequest="250"
        WidthRequest="240"
        BackgroundColor="Transparent"
        Text="Gunung Stong"
        TextColor="Black"
        FontAttributes="Bold"
        FontSize="20"
        Style="{StaticResource ButtonStyle}"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        Clicked="PlaceStong"/>
                <BoxView Grid.Column="2" Grid.Row="0" Grid.RowSpan="3" BackgroundColor="Transparent" HeightRequest="300" WidthRequest="50" HorizontalOptions="Center" VerticalOptions="Center" />
            </Grid>

            <Grid ColumnDefinitions="*,*,*" RowDefinitions="*,*,*" HeightRequest="300" WidthRequest="300">
                <Image Source="tahan.png" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Grid.RowSpan="1" WidthRequest="250" HeightRequest="250" HorizontalOptions="Center" VerticalOptions="Center" />
                <Button
        Grid.Column="0"
        Grid.Row="0"
        Grid.ColumnSpan="3"
        HeightRequest="250"
        WidthRequest="240"
        BackgroundColor="Transparent"
        Text="Gunung Tahan"
        TextColor="White"
        FontAttributes="Bold"
        FontSize="20"
        Style="{StaticResource ButtonStyle}"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        Clicked="PlaceTahan"/>
                <BoxView Grid.Column="2" Grid.Row="0" Grid.RowSpan="3" BackgroundColor="Transparent" HeightRequest="300" WidthRequest="50" HorizontalOptions="Center" VerticalOptions="Center" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>