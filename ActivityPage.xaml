<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdrenalistApp.ActivityPage"
             Title="ActivityPage"
             BackgroundImageSource="black.jpg">
    <ScrollView>
        <VerticalStackLayout
         Padding="30,0"
         Spacing="25">
            <Label
 Text="&#x0a;&#x0a;
 &#x0a;"/>


            <Grid ColumnDefinitions="*,*,*" RowDefinitions="*,*,*" HeightRequest="230" WidthRequest="300">
                <Image Source="hiking2.png" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Grid.RowSpan="1" WidthRequest="2500" HeightRequest="240" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Button
            Grid.Column="0"
            Grid.Row="0"
            Grid.ColumnSpan="3"
            HeightRequest="250"
            WidthRequest="2400"
            BackgroundColor="Transparent"
            Text="H i k i n g"
            TextColor="White"
            FontSize="18"
            FontAttributes="Italic"
            Style="{StaticResource ButtonStyle}"
            HorizontalOptions="Center"
            VerticalOptions="Center" 
            Clicked="HikingPage"/>
                <BoxView Grid.Column="2" Grid.Row="0" Grid.RowSpan="3" BackgroundColor="Transparent" HeightRequest="300" WidthRequest="50" HorizontalOptions="Center" VerticalOptions="Center" />
            </Grid>

            <Grid ColumnDefinitions="*,*,*" RowDefinitions="*,*,*" HeightRequest="230" WidthRequest="300">
                <Image Source="skate2.png" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Grid.RowSpan="1" WidthRequest="2500" HeightRequest="240" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Button
            Grid.Column="0"
            Grid.Row="0"
            Grid.ColumnSpan="3"
            HeightRequest="250"
            WidthRequest="2400"
            BackgroundColor="Transparent"
            Text="S k a t e b o a r d i n g"
            TextColor="White"
            FontSize="18"
            FontAttributes="Italic"
            Style="{StaticResource ButtonStyle}"
            HorizontalOptions="Center"
            VerticalOptions="Center" 
            Clicked="SkatingPage"/>
                <BoxView Grid.Column="2" Grid.Row="0" Grid.RowSpan="3" BackgroundColor="Transparent" HeightRequest="300" WidthRequest="50" HorizontalOptions="Center" VerticalOptions="Center" />
            </Grid>

            <Grid ColumnDefinitions="*,*,*" RowDefinitions="*,*,*" HeightRequest="230" WidthRequest="300">
                <Image Source="wallclimb2.png" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Grid.RowSpan="1" WidthRequest="2500" HeightRequest="240" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Button
            Grid.Column="0"
            Grid.Row="0"
            Grid.ColumnSpan="3"
            HeightRequest="250"
            WidthRequest="2400"
            BackgroundColor="Transparent"
            Text="W a l l   C l i m b i n g"
            TextColor="White"
            FontSize="18"
            FontAttributes="Italic"
            Style="{StaticResource ButtonStyle}"
            HorizontalOptions="Center"
            VerticalOptions="Center" 
            Clicked="WallClimbPage"/>
                <BoxView Grid.Column="2" Grid.Row="0" Grid.RowSpan="3" BackgroundColor="Transparent" HeightRequest="300" WidthRequest="50" HorizontalOptions="Center" VerticalOptions="Center" />
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>