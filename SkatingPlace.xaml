<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdrenalistApp.SkatingPlace"
             BackgroundImageSource="black.png"
             Title="Skateboarding Place">
    <ContentPage.Resources>
        <ResourceDictionary>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout
    Padding="80,100"
    Spacing="25">
            <Grid ColumnDefinitions="*,*,*" RowDefinitions="*,*,*" HeightRequest="300" WidthRequest="300">
                <Image Source="putrajaya.jpg" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Grid.RowSpan="1" WidthRequest="250" HeightRequest="250" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Button
        Grid.Column="0"
        Grid.Row="0"
        Grid.ColumnSpan="3"
        HeightRequest="250"
        WidthRequest="240"
        BackgroundColor="Transparent"
        Text="Putrajaya Challenge Park"
        TextColor="Black"
        FontAttributes="Bold"
        FontSize="20"
        Style="{StaticResource ButtonStyle}"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        Clicked="PlacePutrajaya"/>
                <BoxView Grid.Column="2" Grid.Row="0" Grid.RowSpan="3" BackgroundColor="Transparent" HeightRequest="300" WidthRequest="50" HorizontalOptions="Center" VerticalOptions="Center" />
            </Grid>

            <Grid ColumnDefinitions="*,*,*" RowDefinitions="*,*,*" HeightRequest="300" WidthRequest="300">
                <Image Source="kiara.png" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Grid.RowSpan="1" WidthRequest="250" HeightRequest="250" HorizontalOptions="Center" VerticalOptions="Center"  />
                <Button
        Grid.Column="0"
        Grid.Row="0"
        Grid.ColumnSpan="3"
        HeightRequest="250"
        WidthRequest="240"
        BackgroundColor="Transparent"
        Text="Skatepark Bukit Kiara"
        TextColor="White"
        FontAttributes="Bold"
        FontSize="20"
        Style="{StaticResource ButtonStyle}"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        Clicked="PlaceKiara"/>
                <BoxView Grid.Column="2" Grid.Row="0" Grid.RowSpan="3" BackgroundColor="Transparent" HeightRequest="300" WidthRequest="50" HorizontalOptions="Center" VerticalOptions="Center" />
            </Grid>

            <Grid ColumnDefinitions="*,*,*" RowDefinitions="*,*,*" HeightRequest="300" WidthRequest="300">
                <Image Source="kajang.png" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Grid.RowSpan="1" WidthRequest="250" HeightRequest="250" HorizontalOptions="Center" VerticalOptions="Center" />
                <Button
        Grid.Column="0"
        Grid.Row="0"
        Grid.ColumnSpan="3"
        HeightRequest="250"
        WidthRequest="240"
        BackgroundColor="Transparent"
        Text="Converse Kajang Skatepark"
        TextColor="Black"
        FontAttributes="Bold"
        FontSize="20"
        Style="{StaticResource ButtonStyle}"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        Clicked="PlaceKajang"/>
                <BoxView Grid.Column="2" Grid.Row="0" Grid.RowSpan="3" BackgroundColor="Transparent" HeightRequest="300" WidthRequest="50" HorizontalOptions="Center" VerticalOptions="Center" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>